<% flash.each do |key, value| %>
<div class="alert alert-danger" role="alert">
  <%= value %>
</div>
<% end %>


<h1>Log In </h1>



<%= form_tag url_for(action: 'create'), method: "post", class: "form" do %>


  <%= label_tag 'Email' %>
  <%= text_field_tag 'email'%>
  <br /> <br />

  <%= label_tag 'Password' %>
  <%= text_field_tag 'password'%>
  <br /> <br />


  <%= submit_tag "Log In" %>



  <% end %>