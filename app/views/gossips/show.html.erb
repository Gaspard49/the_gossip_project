<% flash.each do |key, value| %>
<div class="alert alert-success" role="alert">
  <%= value %>
</div>
<% end %>
      
      <div class="jumbotron">
          <h1 class="display-3"><%=@gossip.title %> </h1>
          <p class="lead"> <%= @gossip.content %> </p>
          <hr class="my-4">
            <p><%= link_to "#{User.find(@gossip.user_id).first_name} #{User.find(@gossip.user_id).last_name}", "../profiles/#{@gossip.user_id}" %></p>
            <p><%= link_to User.find(@gossip.user_id).city.name, "../cities/#{User.find(@gossip.user_id).city_id}" %></p>
            <p><%= link_to 'Edit', edit_gossip_path, class: 'btn btn-primary' %>
                    <%= link_to 'Delete', gossip_path(@gossip), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete the article?"} %></p>
        </div>
      

        <ul class="list-group">
            <li class="list-group-item">Comments</li>
            <li><%= link_to 'New Comment', "/gossips/#{@gossip.id}/comments/new", class: 'btn btn-primary' %></li>
                <% @comments.each do |comment| %>
                <% if @gossip.id == comment.gossip_id %>
            <li class="list-group-item list-group-item-primary"><%= comment.content %>
              <p><%= link_to 'Edit', "/gossips/#{@gossip.id}/comments/#{comment.id}/edit", class: 'btn btn-primary' %>
                <%= link_to 'Delete', gossip_path(@gossip), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete the article?"} %></p>
            
            </li>
            <% end %>
            <% end %>
            </div>
          </ul>


  
          